@using QuizFactory.Mvc.Areas.Admin.ViewModels
@model int?
@{
    List<CategoryViewModel> categories = (List<CategoryViewModel>)TempData["categories"];
   }

@(Html.Kendo().DropDownList()
    .Name("CategoryId")
    .SelectedIndex((int)ViewData["selectedId"])
    .DataTextField("Name")
    .DataValueField("Id")
    .BindTo(categories)

)
