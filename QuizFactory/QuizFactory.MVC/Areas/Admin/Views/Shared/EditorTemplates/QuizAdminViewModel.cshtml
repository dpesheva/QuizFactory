@model QuizFactory.Mvc.Areas.Admin.ViewModels.QuizAdminViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "editor-label col-md-2" })
        <div class="col-sm-6">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "editor-field" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "editor-label col-md-2" })
        <div class="col-sm-6">
            @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "k-textbox" } })
            @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsPublic, htmlAttributes: new { @class = "editor-label col-md-2" })
        <div class="col-sm-6">
            <div class="checkbox">
                @Html.EditorFor(model => model.IsPublic)
                @Html.ValidationMessageFor(model => model.IsPublic, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.CategoryId, "Category", htmlAttributes: new { @class = "editor-label col-md-2" })
        <div class="col-sm-6">
            @*  @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })*@
            @Html.EditorFor(model => model.Category)
            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
        </div>
    </div>
   
}

